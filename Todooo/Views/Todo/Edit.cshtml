@model Todooo.ViewModel.TodoAddvm
@{
    ViewData["Title"] = "Edit Todo";
}

<h2>Edit Todo</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="index" value="@ViewBag.Index" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="libele"></label>
        <input asp-for="libele" class="form-control" />
        <span asp-validation-for="libele" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="discription"></label>
        <input asp-for="discription" class="form-control" />
        <span asp-validation-for="discription" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="datelimite"></label>
        <input asp-for="datelimite" type="date" class="form-control" />
        <span asp-validation-for="datelimite" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="statut"></label>
        todo:<input type="radio" value="@(Todooo.Enum.State.todo)" asp-for="statut" />
        doing:<input type="radio" value="@(Todooo.Enum.State.doing)" asp-for="statut" />
        done:<input type="radio" value="@(Todooo.Enum.State.donne)" asp-for="statut" />
        <span asp-validation-for="statut" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Modifier</button>
</form>

<a asp-action="Index">Retour à la liste</a>
